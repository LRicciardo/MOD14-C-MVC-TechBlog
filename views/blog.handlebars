
<nav id='navbar-end'>
  <ul class='level'>
      <li>
        <button
          id='save-btn'
          class='button is-primary is-focused'
          type='submit'
        >
          <i class='fa-regular fa-floppy-disk'></i>
        </button>
        {{!-- <button id="save-btn" class="btn btn-primary">Save this Blog!</button> --}}
      </li>
      <li>
        <!-- which contains user blogs -->
        <button
          id='delete-blog-btn'
          class='button is-danger is-focused'
          type='submit'
          data-id='{{blog.id}}'
        >
          <i class="fa fa-trash"></i>
        </button>
        {{!-- <button id="delete-blog-btn" class="btn btn-sm btn-danger" data-id="{{blog.id}}">
          <i class="fa fa-trash"></i>
        </button> --}}
      </li>
  </ul>
