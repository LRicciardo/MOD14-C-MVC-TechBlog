<div class="text-center">
  <h2>{{{get_emoji}}}     {{title}}</h2>
  <p>Created by {{user.username}} on {{format_date date_created}}</p>

  <p>{{description}}</p>

  {{> comments }}
  
  {{#if comments.length}}
  <div class="col-md-6 comment-list">
    <h3>Comments:</h3>

    {{#each comments as |comment|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4>
          <a type="link" href="/comments/{{comment.id}}">
          <span>Created by {{comment.username}} on {{format_date comment.date_created}}

          </span>
          </a>
          </h4>
         
      </div>
      <div class="col-md-4">
        <button id="delete-comment-btn" class="btn btn-sm btn-danger" data-id="{{comment.id}}">
          <i class="fa fa-trash"></i>
          </button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>