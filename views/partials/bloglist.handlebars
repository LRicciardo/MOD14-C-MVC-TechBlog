{{#each blogs as |blog| }}
<div class="card blog">
  <header class="card-header is-small level">
    <p class="card-header-title">
      {{{get_emoji}}}
      <!-- Call helper function with triple brackets to render the emoji span as HTML -->
      <a type="link" href="/blogpage/{{blog.id}}">{{blog.title}}</a>
    </p>
    <p class="card-header-subtitle">
      Created by {{blog.user.username}} on {{format_date blog.date_created}}
    </p>

    <p class="card-header-icon">
      <button 
        id='delete-blog-btn' 
        class='button is-small is-danger ml-6'
        type='submit'
        data-id="{{blog.id}}">
        <i class="fa fa-trash"></i>
      </button>
    </p>

  </header>

  <div class="card-content">
    <div class="content">
      {{blog.description}}
    </div>
  </div>
</div>
{{/each }}