<!-- header Section -->
<section id='header' class='hero'>
  <div class='columns level'>
    <div class='column level-item'>
      <a>
        <img
          {{! src starts with the "static" public folder }}
          src='../assets/technology-lightbulb.png'
          width='150'
        />
      </a>
    </div>
    <div class='column'>
      <p class='title'>
        {{! href references the route end-points }}
        <a href='/'>TechDump!</a>
      </p>
      <p class='subtitle'>
        <a href='/'>Dump your knowledge and ideas then Pass it on!</a>
      </p>
    </div>
  </div>
</section>

<nav id='navbar-end'>
  <ul class='level'>
    <!-- Conditionally render login or logout links -->
    {{#if logged_in}}
      <li>
        <a id='home' href='/'>Home</a>
      </li>
      <li>
        <!-- which contains user blogs -->
        <a id='blog' href='/dash'>Dashboard</a>
      </li>
      <li>
        <!-- or logout if logged-in-->
        <button class='no-button' id='logout'>Logout</button>
      </li>
    {{else}}
          <li>
        <a id='home' href='/'>Home</a>
      </li>
      <li>
        <!-- which contains user blogs -->
        <a id='blog' href='/dash'>Dashboard</a>
      </li>
      <li>
        <!-- or login if not logged-in-->
        <a href='/login'>Login</a>
        {{! <span>Login</span> }}
      </li>
    {{/if}}
  </ul>
</nav>

{{#if logged_in}}
  <script defer src='/js/logout.js'></script>
{{/if}}